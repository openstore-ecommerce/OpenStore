<!-- fields required to send required ajax cart to server -->
<span id="categoryadminsearch">
    <input id="uilang" type="hidden" value="@Utils.GetCurrentCulture()" />
    <input id="returncatid" type="hidden" value="0" />
    <input id='editlang' type='hidden' value='@Model.Lang' />
    <input id="razortemplate" type="hidden" value="" />
    <input id="themefolder" type="hidden" value="config" />
    <input id="selectedcatid" type="hidden" value="" />
    <input id="movetocatid" type="hidden" value="" />
    <input id="movecatid" type="hidden" value="" />
    <input id="imguploadlist" type="hidden" value="" />
    <input id="searchtext" type="hidden" value="" />
    <input id="searchcategory" type="hidden" value="" />
    <input id="pagesize" type="hidden" value="20" />
    <input id="pagenumber" type="hidden" value="1" />
    <input id="selectproductid" type="hidden" value="" />    
    <input id="cascade" type="hidden" value="False" />
    <input id="orderby" type="hidden" value="{bycategoryproduct}" />
    <input id="newcatid" type="hidden" value="" />
    <input id="selecttaxrate" type="hidden" value="" />           
    <input id="nextlang" type="hidden" value="" />
    <input id="selectedgroupref" type="hidden" value="" />
    <input id="selectedgroupid" type="hidden" value="" />
</span>


<div id="loader" class="processing" style="display:none;">@ResourceKey("General.ProcessingDiv")</div>

<div id="pageactionssource">
    <!-- Page actions are moved into header bar - also exist at page bottom-->
    <div class="col-xs-9 col-sm-9">
        <a href="javascript:void(0)" class="show-sidebar">
            <i class="fa fa-bars"></i>
        </a>
        <div class="actionbuttonwrapper">
            <a id="categoryAdmin_cmdAddNew" class="btn btn-primary " href="javascript:void(0)">@ResourceKey("General.cmdAddButton")</a>
            <a id="categoryAdmin_cmdSaveList" class="btn btn-primary " href="javascript:void(0)">@ResourceKey("General.cmdSaveButton")</a>
            <a id="categoryAdmin_cmdSaveExit" style="display: none;" class="btn btn-primary " href="javascript:void(0)">@ResourceKey("General.cmdSaveExitButton")</a>
            <a id="categoryAdmin_cmdSave" style="display: none;" class="btn btn-primary " href="javascript:void(0)">@ResourceKey("General.cmdSaveButton")</a>
            <a id="categoryAdmin_cmdDelete" style="display: none;" class="btn btn-danger " href="javascript:void(0)">@ResourceKey("General.cmdDeleteButton")</a>
            <a id="categoryAdmin_cmdReturn" style="display: none;" class="btn btn-default " href="javascript:void(0)">@ResourceKey("General.cmdReturnButton")</a>
        </div>
    </div>
    <div class="col-xs-3 col-sm-3 top-panel-right">
        @EditLanguageButton()
    </div>
</div>

<div id="datadisplay"></div>

